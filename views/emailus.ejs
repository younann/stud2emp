        </div>
        <i class="fas fa-bars float-left fixed-top btn-lg" href="javascript:void(0)" class="closebtn" onclick="closeNav()"></i>
    </nav>
    <!-- sidebar-wrapper  -->
    <main class="page-content">
        <div class="container-fluid">
            <h1>Stud2Emp - Contact us </h1>
            <div class="alert alert-dismissible alert-warning" id="Valid-msg"></div>
            <form action="https://formspree.io/mgepeaed" method="POST" onsubmit="return validation()" target="_blank">
                <ul style="list-style: none">
                    <li>
                        <div class="form-group">
                            <label class="col-form-label" for="inputDefault">Full Name</label>
                            <input type="text" class="form-control" placeholder="Full Name" id="fname" name="fname" required>
                        </div>
                    </li>
                    <li>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="Emailinput" name="email" aria-describedby="emailHelp"
                                placeholder="Enter email" required>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                    </li>
                    <li>
                        <div class="form-group">
                            <label for="exampleTextarea">Message Text</label>
                            <textarea  name="msg"class="form-control" id="mTextarea" rows="10"
                                placeholder="Enter Your Message Here......."></textarea>
                        </div>
                    </li>
                    <li>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </li>
                </ul>

            </form>
        </div>
    </main>
    <!-- page-content" -->
</div>
<!-- page-wrapper -->
