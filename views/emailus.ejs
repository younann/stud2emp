                </div>
            </div>

            <!-- sidebar-header  -->
            <div class="sidebar-menu">
                <ul>
                    <li class="header-menu">
                        <span>General</span>
                    </li>
                    <li class="sidebar-dropdown">
                        <a href="/">
                            <i class="fas fa-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-dropdown">
                        <a href="/users/appo">
                            <i class="fas fa-calendar-check"></i>
                            <span>Schedule Appointment</span>
                        </a>
                    </li>
                    <li class="sidebar-dropdown">
                        <a href="/users/search">
